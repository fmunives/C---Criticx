<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @company.description %>
</p>

<p>
  <strong>Start date:</strong>
  <%= @company.start_date %>
</p>

<p>
  <strong>Country:</strong>
  <%= @company.country %>
</p>

<%= link_to 'Edit', edit_company_path(@company) %> | <%= link_to 'Back',
companies_path %>

<h3>Games</h3>

<ul>
  <% @company.games.each do |game| %>
  <li>
    <a href="<%= "/games/#{game.id}"  %> "><strong> <%= game.name%> </strong></a>
    <p><%= game.description%></p>
    <p><small>price: $ <%= game.price%> </small></p>
  </li>
  <% end %>
</ul>
